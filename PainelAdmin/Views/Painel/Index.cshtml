@using PainelAdmin.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Painel";

    ApplicationUser user = null;

    if (User?.Identity?.IsAuthenticated ?? false)
    {
        user = await UserManager.GetUserAsync(User);
    }
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

<div class="text-center">
    <h1 class="text-start mb-3">Página Inicial</h1>

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item no-hover userInfo">
            <img src="@user?.Foto" alt="Foto do usuário" />
            <div class="username">Olá, @user?.Nome</div>
        </li>
    }
    else
    {
        <p>Você não está logado.</p>
    }
    <div class="container">
        <div class="row g-4">
            <!-- Espaçamento entre os cards -->

            <div class="col-md-6 col-lg-6">
                <div class="card h-100">
                    <div class="card-body text-start">
                        <img src="~/img/PessoaIcon.png" class="card-img-top mb-2" alt="Usuário"
                             style="width: 50px; height: 50px; object-fit: cover;" />
                        <h3>@ViewBag.ContadorTutores</h3>
                        <h5 class="card-title">Tutores</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-6">
                <div class="card h-100">
                    <div class="card-body text-start">
                        <img src="~/img/FuncioIcon.png" class="card-img-top mb-2" alt="Funcionarios"
                             style="width: 50px; height: 50px; object-fit: cover;" />
                        <h3>@ViewBag.ContadorFuncionarios</h3>
                        <h5 class="card-title">Funcionarios</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-6">
                <div class="card h-100">
                    <div class="card-body text-start">
                        <img src="~/img/PetIcon1.png" class="card-img-top mb-2" alt="PetsAdocao"
                             style="width: 50px; height: 50px; object-fit: cover;" />
                        <h3>@ViewBag.ContadorPetAdocao</h3>
                        <h5 class="card-title">Animais para adoção</h5>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-6">
                <div class="card h-100">
                    <div class="card-body text-start">
                        <img src="~/img/VetIcon.png" class="card-img-top mb-2" alt="AnimaisTutores"
                             style="width: 50px; height: 50px; object-fit: cover;" />
                        <h3>@ViewBag.ContadorPetComTutor</h3>
                        <h5 class="card-title">Animais com tutores</h5>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
