@model List<PainelAdmin.Models.ApplicationUser>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<h2>Usuários</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nome</td>
                <td>@usuario.CPF</td>
                <td>@usuario.Email</td>
                <td>@usuario.PhoneNumber</td>
                <td class="col-acoes">
                    <a asp-action="Editar" asp-route-id="@usuario.Id" class="btn btn-outline-secondary">
                        <img src="~/img/editar-arquivo.png" />
                    </a>
                    <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modal-@usuario.Id">
                        <img src="~/img/olho.png" />
                    </button>
                    <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal-@usuario.Id">
                        <img src="~/img/lixeira-xmark.png" />
                    </button>
                </td>
            </tr>

            <!-- Modal de Visualização -->
            <div class="modal fade all" id="modal-@usuario.Id" tabindex="-1" aria-labelledby="modalLabel-@usuario.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content ModUsu">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="modalLabel-@usuario.Id">Visualizar Usuário</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body  ">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-6 mb-2">
                                        <div class="d-flex align-items-center">
                                            <dt class="me-2 mb-0">Nome:</dt>
                                            <dd class="mb-0">@usuario.Nome</dd>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
                                        <div class="d-flex align-items-center">
                                            <dt class="me-2 mb-0">E-mail:</dt>
                                            <dd class="mb-0">@usuario.Email</dd>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
                                        <div class="d-flex align-items-center">
                                            <dt class="me-2 mb-0">Telefone:</dt>
                                            <dd class="mb-0">@usuario.PhoneNumber</dd>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
                                        <div class="d-flex align-items-center">
                                            <dt class="me-2 mb-0">WhatsApp:</dt>
                                            <dd class="mb-0">(14)987654321</dd>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
                                        <div class="d-flex align-items-center">
                                            <dt class="me-2 mb-0">CPF:</dt>
                                            <dd class="mb-0">@usuario.CPF</dd>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-2">
                                        <div class="d-flex align-items-center">
                                            <dt class="me-2 mb-0">Endereço:</dt>
                                            <dd class="mb-0">@usuario.Endereco</dd>
                                        </div>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <div class="d-flex align-items-center justify-content-center text-center">
                                            <dt class="me-2 mb-0">Foto:</dt>
                                            <dd class="mb-0">
                                                @if (!string.IsNullOrEmpty(usuario.Foto))
                                                {
                                                    <img src="~/@usuario.Foto" style="width: 150px; height: 150px; object-fit: cover;" />
                                                }
                                            </dd>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal de Confirmação de Exclusão -->
            <div class="modal fade" id="deleteModal-@usuario.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@usuario.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="deleteModalLabel-@usuario.Id">Confirmar Exclusão</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                        </div>
                        <div class="modal-body">
                            Tem certeza que deseja excluir o usuário <strong>@usuario.Nome</strong>?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <form asp-action="Excluir" asp-route-id="@usuario.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
