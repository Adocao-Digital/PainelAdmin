@model IEnumerable<PainelAdmin.Models.Pet>

@{
	ViewData["Title"] = "Meus Pets";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site/tabelas.css" asp-append-version="true" />
}

<h1>Meus Pets</h1>
@if (TempData["MensagemSucesso"] != null) {
    <p class="alert alert-success">@TempData["MensagemSucesso"];</p>
}
<a asp-action="CadastroPet" class="btn btn-success">Cadastrar Pet</a>
@if(TempData["MensagemErro"] != null)
{
    <p class="alert alert-danger">@TempData["MensagemErro"];</p>
} else 
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Espécie</th>
                <th>Imagem</th>
                <th class="col-acoes">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Especie</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Foto))
                        {
                            <img src="~/@item.Foto" style="width: 60px; height: 60px; object-fit: cover;" />
                        }
                    </td>
                    <td class="col-acoes">
                        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">
                            <img src="~/img/editar-arquivo.png" />
                        </a> |
                        <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modal-@item.Id">
                            <img src="~/img/olho.png" />
                        </button>
                        |
                        <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                            <img src="~/img/lixeira-xmark.png" />
                        </button>




                        <!-- Modal de Confirmação de Exclusão -->
                        <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title" id="deleteModalLabel-@item.Id">Confirmar Exclusão</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                                    </div>
                                    <div class="modal-body">
                                        Tem certeza que deseja excluir o pet <strong>@item.Nome</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-danger">Excluir</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="modal-@item.Id" tabindex="-1" aria-labelledby="modalLabel-@item.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="modalLabel-@item.Id">Visualizar animal</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <dt class="me-2 mb-0">Nome:</dt>
                                                        <dd class="mb-0">@item.Nome</dd>
                                                    </div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <dt class="me-2 mb-0">Idade:</dt>
                                                        <dd class="mb-0">@item.Idade</dd>
                                                    </div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <dt class="me-2 mb-0">Espécie:</dt>
                                                        <dd class="mb-0">@item.Especie</dd>
                                                    </div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <dt class="me-2 mb-0">Porte:</dt>
                                                        <dd class="mb-0">@item.Porte</dd>
                                                    </div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <dt class="me-2 mb-0">Raça:</dt>
                                                        <dd class="mb-0">@item.Raca</dd>
                                                    </div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <dt class="me-2 mb-0">Cor:</dt>
                                                        <dd class="mb-0">@item.Cor</dd>
                                                    </div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <dt class="me-2 mb-0">Sexo:</dt>
                                                        <dd class="mb-0">@item.Sexo</dd>
                                                    </div>
                                                </div>
                                                <div class="col-6 mb-2">
                                                    <div class="d-flex align-items-center justify-content-center text-center">
                                                        <dt class="me-2 mb-0">Foto:</dt>
                                                        <dd class="mb-0">
                                                            @if (!string.IsNullOrEmpty(item.Foto))
                                                            {
                                                                <img src="~/@item.Foto" style="width: 150px; height: 150px; object-fit: cover;" />
                                                            }
                                                        </dd>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}