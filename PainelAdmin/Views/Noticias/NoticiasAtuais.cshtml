@model IEnumerable<PainelAdmin.Models.Noticia>

@{
    ViewData["Title"] = "Notícias";
    Layout = "_Painel";
    var index = 0;
}

<h1>Notícias atuais</h1>

<p class="text-end mb-3">
    <a class="btn btn-success" asp-action="Create">Nova Notícia</a>
</p>

<div id="carouselNoticias" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            <div class="carousel-item @(index == 0 ? "active" : "")">
                <div class="card mx-auto" style="width: 90%; max-width: 1200px;">
                    <div class="d-flex justify-content-between align-items-center p-2">
                        <p class="card-text mb-0">
                            <small class="text-muted">Publicado em: @item.DataPublicacao?.ToString("dd/MM/yyyy")</small>
                        </p>
                        <div class="col-acoes">
                            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">
                                <img src="~/img/editar-arquivo.png" /> 
                            </a>
                            |
                            <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <img src="~/img/lixeira-xmark.png" />
                            </button>

                        </div>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title">@item.Titulo</h2>
                        <p class="card-text">@item.Conteudo</p>
                    </div>
                    <img src="~/@item.Foto" class="card-img-top" alt="@item.Titulo" style="height: 400px; object-fit: cover;">
                </div>
            </div>
            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="deleteModalLabel-@item.Id">Confirmar Exclusão</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                        </div>
                        <div class="modal-body">
                            Tem certeza que deseja excluir a notícia <strong>@item.Titulo</strong>?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            index++;
        }
    </div>

    <button class="carousel-control-prev custom-control fixed-control" type="button" data-bs-target="#carouselNoticias" data-bs-slide="prev">
        <span class="custom-arrow">&larr;</span>
    </button>
    <button class="carousel-control-next custom-control fixed-control" type="button" data-bs-target="#carouselNoticias" data-bs-slide="next">
        <span class="custom-arrow">&rarr;</span>
    </button>
</div>
