@model PainelAdmin.Models.Noticia

@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container my-5">
    @if (Model != null)
    {
        <div class="card shadow">
            <div class="card-body">
                <h1 class="card-title">@Model.Titulo</h1>
                <img src="~/@Model.Foto" class="card-img-top" alt="Imagem da notícia" />
                <p class="text-muted mb-2">
                    Publicado em
                    @Model.DataPublicacao?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                    @if (!string.IsNullOrEmpty(Model.NomeAutor))
                    {
                        @: por @Model.NomeAutor
                    }
                </p>
                @if (Model.DataEdicao.HasValue)
                {
                    <p class="text-muted">
                        Editado em @Model.DataEdicao.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                        @if (!string.IsNullOrEmpty(Model.NomeEditor))
                        {
                            @: por @Model.NomeEditor
                        }
                    </p>
                }
                <p class="card-text">@Html.Raw(Model.Conteudo.Replace("\n", "<br/>"))</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            Notícia não encontrada ou ID inválido.
        </div>
    }
</div>
