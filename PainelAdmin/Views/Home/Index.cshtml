@model IEnumerable<PainelAdmin.Models.Noticia>

@{
    ViewData["Title"] = "Início";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site/style-index.css" asp-append-version="true" />
    <style>
        .carousel-image {
            width: 100%;
            height: 400px;
            object-fit: contain;
        }
    </style>
}

<div id="carouselExampleIndicators" class="carousel slide mx-auto mt-4" data-bs-ride="carousel">
    @{
        var listaNoticias = Model?.Take(3).ToList();
    }

    @if (listaNoticias.Any())
    {
        <div class="carousel-indicators">
            @for (int i = 0; i < listaNoticias.Count; i++)
            {
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : null)" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
            }
        </div>
        <div class="carousel-inner">
            @for (int i = 0; i < listaNoticias.Count; i++)
            {
                var n = listaNoticias[i];

                // Previne null
                if (n == null) { continue; }

                string uuid = n.Id.ToString() ?? "";

                <div class="carousel-item @(i == 0 ? "active" : null)">
                    <a asp-controller="Noticias" asp-action="Details" asp-route-id="@n.Id" class="text-decoration-none text-white">
                        <img src="~/@n.Foto" class="d-block w-100 carousel-image" alt="Imagem da notícia">
                        <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                            <h5>@(n.Titulo ?? "Sem título")</h5>
                        </div>
                    </a>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Próximo</span>
        </button>
    }
    else
    {
        <div class="text-center my-5">
            <p class="text-muted">Nenhuma notícia disponível no momento.</p>
        </div>
    }
</div>

<div class="d-flex flex-wrap justify-content-center gap-4 mt-5">
    <div class="card text-center" style="width: 15rem;">
        <a asp-controller="Home" asp-action="QueroAdotar">
            <img src="~/img/pets.png" alt="Imagem pets">
        </a>
        <div class="card-body">
            <a asp-controller="Home" asp-action="QueroAdotar" class="stretched-link">
                <p class="card-text">Encontre seu melhor amigo</p>
            </a>
        </div>
    </div>
    <div class="card">
        <a href="/cadastro-pet">
            <img src="~/img/form.png" alt="Imagem formulário">
        </a>
        <div class="card-body">
            <a href="/cadastro-pet" class="stretched-link">
                <p>Registre seu pet</p>
            </a>
        </div>
    </div>
    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <div class="card">
            <a asp-controller="User" asp-action="Cadastro">
                <img src="~/img/registrese.png" alt="Imagem cadastro">
            </a>
            <div class="card-body">
                <a asp-controller="User" asp-action="Cadastro" class="stretched-link">
                    <p>Faça seu cadastro</p>
                </a>
            </div>
        </div>
    }
    <div class="card">
        <a href="https://barrabonita.sp.gov.br" target="_blank">
            <img src="~/img/prefeitura.png" alt="Imagem prefeitura">
        </a>
        <div class="card-body">
            <a href="https://barrabonita.sp.gov.br" target="_blank" class="stretched-link">
                <p>Site da prefeitura</p>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/script-ativo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}