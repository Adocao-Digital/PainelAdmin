@{
    ViewData["Title"] = "Home Page";
    var foto = ViewBag.Foto as string;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @if (!string.IsNullOrEmpty(foto))
    {
        <div>
            <img src="@Url.Content(foto)" alt="Foto do usuário" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
        </div>
    }
    else
    {
        <p>Você não está logado ou não possui uma foto.</p>
    }

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
