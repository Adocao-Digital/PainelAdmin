@using MongoDB.Bson;
@using PainelAdmin.Models;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager;
@inject SignInManager<ApplicationUser> SignInManager;

@{
    var usuarioEmail = User.Identity?.IsAuthenticated == true ? User.Identity.Name : null;
    var usuarioRole = User.IsInRole("ADM") ? "ADM" : null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CCZ</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site/style-header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site/style-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="icon" type="image/x-icon" href="~/img/dogo-argentino.png">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <div class="head2"></div>
    </header>

    <nav class="navbar navbar-expand-xl bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img src="~/img/logo.png" alt="Logo" width="50" height="50" class="d-inline-block align-text-top"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Home" asp-action="Sobre">Sobre nós</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Home" asp-action="FaleConosco">Fale conosco</a></li>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link text-black" asp-controller="Pets" asp-action="MeusPets">Meus Pets</a></li>
                    }

                    @if (User.IsInRole("ADM"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-controller="Painel" asp-action="Index" target="_blank">Painel de Controle</a>
                        </li>
                    }
                </ul>

                <div class="container c-button">
                    <a asp-controller="Home" asp-action="QueroAdotar" class="btn btn-success max-width">Quero adotar</a>
                    <a href="/ajudar" class="btn btn-success max-width">Ajudar</a>

                    @if (!string.IsNullOrEmpty(usuarioEmail))
                    {
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-success max-width">Sair</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-success max-width">Entrar</a>
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
